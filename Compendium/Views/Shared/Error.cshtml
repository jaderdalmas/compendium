@model Microsoft.AspNetCore.Mvc.ProblemDetails
@{
  ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model != null)
{
    <p>
        <strong>@Model.Title</strong> <code>@Model.Status</code>
        @if(Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
        {
            <br />
            <strong>Trace: </strong> @Html.Raw(Model.Detail.Replace("|", "<br />", StringComparison.InvariantCulture))
        }
    </p>
}